{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main",
    "panel"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-hide",
    "store:default",
    "dialog:default",
    "fs:default",
    "http:default",
    "shell:default",
    "notification:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "*://*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "ollama",
          "cmd": "ollama",
          "args": true
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        }
      ]
    }
  ]
}