{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "companion",
  "version": "0.1.0",
  "identifier": "com.companion.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Companion",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": true
      },
      {
        "label": "panel",
        "title": "Companion Mini Chat",
        "width": 380,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null
    }
  }
}
